<div class="navbar-wagon navbar-fixed-top navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "home.png" %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Differenty navigation if login or not -->
    <% if user_signed_in? %>


    <!-- my yurt button -->
    <%= link_to "My yurts", yurts_path, class: 'btn btn-info full-width navbarbutton'%>
    <!-- my bookings button -->
    <%= link_to("My bookings", bookings_path, class: 'btn btn-info full-width navbarbutton')%>

    <!-- my profile -->
    <%= link_to "My Profile", profile_path(current_user.profile), :method => :get, class: 'btn btn-info full-width navbarbutton'%>
    <!-- logout button -->
    <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-info full-width navbarbutton') %>
    <!-- Notification -->
    <% if current_user.token %>
    <!-- FACEBOOK CONNECT AVATAR CODE -->
    <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
    <%= image_tag avatar_url, class: "avatar dropdown-toggle navbarbutton", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <!-- FACEBOOK CONNECT AVATAR CODE -->
    <% end %>
    <% else %>

    <%= link_to('Login', new_user_session_path, class: 'btn btn-info full-width navbarbutton')  %>
    <%= link_to("Sign Up", new_user_registration_path, :method => :get, class: 'btn btn-info full-width navbarbutton') %>

    <% end %>
     </div>


  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

