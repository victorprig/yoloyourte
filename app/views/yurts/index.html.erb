<div class=text-center>
  <h1>My Yurts</h1>
</div>

<div class="container">
    <div class="row">
      <% current_user.yurts.each do |yurt| %>
          <% if yurt[:photo] %>
            <div class="col-xs-6">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(<%= cl_image_path yurt.photo, height: 300, width: 500, crop: :scale %>);">
                <div class="card-category">
                  <%= yurt.shape %></h1>
                </div>
                <div class="card-description">
                  <h1><%= yurt.location %></h1>
                  <h2><%= yurt.climate %></h2>
                </div>
              </div>
              <%= link_to "", yurt_path(yurt), class: "card-link" %>
            </div>
          <% else %>
            <p> Pas de tof <p>
          <% end %>
      <% end %>
    </div>
  </div>

<%= link_to "Add a Yurt!", new_yurt_path, class: "btn btn-info text-center" %>
